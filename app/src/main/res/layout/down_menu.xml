<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="5">

        <Button
            android:id="@+id/button_clear"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="C"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:visibility="gone"
            android:text="Delete"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:visibility="gone"
            android:text="%"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_divide"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="/"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_seven"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="7"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_eight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="8"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_nine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="9"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="*"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_four"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="4"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_five"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="5"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_six"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="6"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="-"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="2"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_three"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="3"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="+"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_change_mode"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:onClick="onButtonClickChange"
            android:visibility="gone"
            android:text="Change"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_zero"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text="0"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_comma"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="0dp"
            android:text=","
            android:visibility="gone"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_sum"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/sum_button_color"
            android:minWidth="0dp"
            android:text="="
            android:onClick="onButtonClickReturnResult"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="1" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

